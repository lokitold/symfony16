{% extends 'AppBundle::base-blog.html.twig' %}


{% block body %}
    <div class="main-content-inner">
        <div class="breadcrumbs" id="breadcrumbs">
            <script type="text/javascript">
                try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
            </script>

            <ul class="breadcrumb">
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                    <a href="#">Blog</a>
                </li>

                <li>
                    <a href="#">Post</a>
                </li>
                <li class="active">Listado</li>
            </ul><!-- /.breadcrumb -->

        </div>

        <div class="page-content">
            <div class="page-header">
                <h1>
                    Post
                    <small>
                        <i class="ace-icon fa fa-angle-double-right"></i>
                        List
                    </small>
                </h1>
            </div><!-- /.page-header -->

            <div class="row">
                <div class="col-xs-12">
                    <!-- PAGE CONTENT BEGINS -->
                    <div class="row">
                        <div class="col-xs-12">
                            <table id="simple-table" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Titulo</th>
                                        <th>Subtitulo</th>

                                        <th class="hidden-480">
                                            <i class="ace-icon fa fa-clock-o bigger-110 hidden-480"></i>
                                            Description
                                        </th>
                                        <th class="hidden-480">Activo</th>

                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for post in posts %}
                                        <tr>
                                            <td>
                                                <a href="{{ path('admin_post_show', { 'id': post.id }) }}">{{ post.id }}</a>
                                            </td>
                                            <td>{{ post.titulo }}</td>
                                            <td >{{ post.subtitulo }}</td>
                                            <td class="hidden-480">{{ post.description }}</td>

                                            <td class="hidden-480">
                                                {% if post.isActive %}
                                                    <span class="label label-sm label-success">Registered</span>
                                                {% else %}
                                                    <span class="label label-sm label-warning">Expiring</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <div class="hidden-sm hidden-xs btn-group">
                                                    <a href="{{ path('admin_post_show', { 'id': post.id }) }}">
                                                        <button class="btn btn-xs btn-success" >
                                                            <i class="ace-icon fa fa-check bigger-120"></i>
                                                        </button>
                                                    </a>

                                                    <a href="{{ path('admin_post_edit', { 'id': post.id }) }}">
                                                        <button class="btn btn-xs btn-info">
                                                            <i class="ace-icon fa fa-pencil bigger-120"></i>
                                                        </button>
                                                    </a>

                                                </div>

                                                <div class="hidden-md hidden-lg">
                                                    <div class="inline pos-rel">
                                                        <button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                                            <i class="ace-icon fa fa-cog icon-only bigger-110"></i>
                                                        </button>

                                                        <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                                            <li>
                                                                <a href="{{ path('admin_post_show', { 'id': post.id }) }}" class="tooltip-info" data-rel="tooltip" title="View">
                                                                                <span class="blue">
                                                                                    <i class="ace-icon fa fa-search-plus bigger-120"></i>
                                                                                </span>
                                                                </a>
                                                            </li>

                                                            <li>
                                                                <a href="{{ path('admin_post_edit', { 'id': post.id }) }}" class="tooltip-success" data-rel="tooltip" title="Edit">
                                                                                <span class="green">
                                                                                    <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                                                                                </span>
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div><!-- /.span -->
                    </div><!-- /.row -->
                    <div class="row">
                        <a href="{{ path('admin_post_new') }}">
                            <button class="btn btn-white btn-default" type="button"> Create a new entry</button>
                        </a>
                    </div>
                    <!-- PAGE CONTENT ENDS -->
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.page-content -->
    </div>
{% endblock %}
