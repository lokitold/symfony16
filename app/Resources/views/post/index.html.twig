{% extends 'AppBundle::base-blog.html.twig' %}


{% block body %}
    <h1>Post list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Sub_titulo</th>
                <th>Description</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Isactive</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td><a href="{{ path('admin_post_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                <td>{{ post.titulo }}</td>
                <td>{{ post.subtitulo }}</td>
                <td>{{ post.description }}</td>
                <td>{% if post.createdat %}{{ post.createdat|date('Y-m-d') }}{% endif %}</td>
                <td>{% if post.updatedat %}{{ post.updatedat|date('Y-m-d') }}{% endif %}</td>
                <td>{% if post.isActive %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_post_show', { 'id': post.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_post_edit', { 'id': post.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_post_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
